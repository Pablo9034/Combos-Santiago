---
import { db, Combos } from 'astro:db';

import Combo from './Combo.astro';

interface Combo {
    title: string;
    content: [{ item: string, weight: string }];
}

const combos = await db.select().from(Combos) as Array<Combo>;
---

<div class="py-5 flex justify-center flex-wrap gap-y-10">
    {
        combos.map(({ title, content }, index)=> (
            <Combo id={ index } title={ title } content={ content }/>
        ))
    }
</div>