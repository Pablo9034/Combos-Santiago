---
interface Props {
    title: string;
    id?: string;
    background?: boolean;
}

const { title, id, background = false } = Astro.props;
---

<section class:list={[
    { "bg-[url(/background.svg)] bg-no-repeat bg-cover py-10": background }
]}>
        <slot name="after-title"/>

        <h2 id={ id ?? '' } class="pb-5 font-[Barlow] text-3xl text-center">{ title }</h2>

        <slot/>
</section>