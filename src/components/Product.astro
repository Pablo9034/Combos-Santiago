---
import { Image } from 'astro:assets';

import ProductImage from '@assets/product-default.png';
import Paperclip from '@assets/paperclip.svg';

const product = [
    { item: "Pierna de Cerdo", weight: "10lb" },
    { item: "Pierna de Cerdo", weight: "10lb" },
    { item: "Pierna de Cerdo", weight: "10lb" },
    { item: "Pierna de Cerdo", weight: "10lb" },
    { item: "Pierna de Cerdo", weight: "10lb" },
    { item: "Pierna de Cerdo", weight: "10lb" },
    { item: "Pierna de Cerdo", weight: "10lb" },
    { item: "Pierna de Cerdo", weight: "10lb" }
]
---

<div class="w-80 rounded-2xl shadow-md shadow-red-950/50">
    <div>
        <Image src={ ProductImage } alt="Portada el Producto" class="w-full h-52 object-cover rounded-t-2xl"/>
    </div>

    <div>
        <h3 class="mb-5 font-[Barlow] text-xl text-center">Combo Estandar</h3>

        <ul class="px-3">
            {
                product.slice(0, 5).map(({ item, weight })=> (
                    <li class="my-3 flex justify-between">
                        <span>{ item }</span>
                        <span>{ weight }</span>
                    </li>
                ))
            }
        </ul>
        {
            (product.length > 5)
                ? <span class="block text-center">...</span>
                : null
        }

        <button class="mt-5 w-full inline-flex justify-center gap-3"> <Paperclip/> Saber m√°s</button>
        <button class="mt-5 w-full py-3 bg-linear-to-b from-green-700 to-green-900 rounded-2xl font-bold active:scale-95 transition-[scale]">Comprar</button>
    </div>
</div>